{
  "include": ["./*.ts", "./**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es2018", "DOM"],
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  }
}
