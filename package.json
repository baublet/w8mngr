{
  "name": "w8mngr",
  "version": "0.0.1",
  "description": "w8mngr utilizing Netlify's functions and a React SPA",
  "scripts": {
    "gql:generate": "node_modules/.bin/graphql-codegen",
    "build:netlify": "bash ./netlify.sh",
    "build:api": "esbuild api/graphql.ts --sourcemap=external --outfile=api/graphql.js --bundle --platform=node --external:knex --external:bcrypt",
    "build:client": "esbuild client/index.tsx --sourcemap=external --outfile=client/index.js --bundle",
    "build:css": "tailwindcss -o client/tailwind.css",
    "migrate:create:develop": "NODE_ENV=develop knex migrate:make -x ts --",
    "migrate:develop": "knex migrate:latest --env develop",
    "migrate:production": "knex migrate:latest --env production",
    "db:reset:develop": "rm -rf dev.sqlite3; yarn migrate:develop",
    "db:migrate:production": "yarn migrate:production",
    "develop": "pm2 delete ecosystem.config.js; pm2 start; pm2 logs",
    "test": "node -r ts-node/register ./node_modules/.bin/jest"
  },
  "author": "Ryan M. Poe",
  "engines": {
    "node": ">=16"
  },
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.4.17",
    "@baublet/service-container": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "apollo-server": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-lambda": "^3.5.0",
    "bcrypt": "^5.0.1",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "esbuild": "^0.13.14",
    "esbuild-jest": "^0.5.0",
    "graphql": "^16.0.1",
    "json-stringify-safe": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.14",
    "lambda-local": "^2.0.0",
    "pg": "^8.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5",
    "react-router-dom": "^5",
    "react-transition-group": "^4.4.2",
    "serverless-http": "^2.7.0",
    "sqlite3": "^5.0.2",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-operations": "^2.2.0",
    "@graphql-codegen/typescript-react-apollo": "^3.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5",
    "@types/react-transition-group": "^4.4.4",
    "express": "^4.17.1",
    "jest": "^27.3.1",
    "pm2": "^5.1.2"
  }
}
