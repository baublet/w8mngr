{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["esnext", "es2015", "dom"],
    "paths": {
      "components/*": ["client/components/*"],
      "pages/*": ["client/pages/*"],
      "helpers/*": ["client/helpers/*"],
      "queries/*": ["client/queries/*"],
      "sharedHelpers/*": ["shared/helpers/*"]
    }
  },
  "include": ["./client/**/*"]
}
