{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["esnext", "es2015", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "client/*": ["client/*"],
      "shared/*": ["shared/*"]
    }
  },
  "include": ["client/*", "client/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
