{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["es2018", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "types": [
      "./types/DeepRequired",
      "./types/json-stringify-deterministic",
      "./types/Maybe",
      "./types/Resolvable",
      "./types/quagga",
      "jest",
      "react/next"
    ]
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental",
    "require": ["tsconfig-paths/register"]
  }
}
