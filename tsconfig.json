{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["esnext", "es2015", "dom"],
    "esModuleInterop": true,
    "paths": {
      "api/*": ["api/*"],
      "client/*": ["client/*"],
      "shared/*": ["shared/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
